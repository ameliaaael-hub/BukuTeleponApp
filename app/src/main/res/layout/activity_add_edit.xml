<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F8">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_main"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back_white"
            android:clickable="true"
            android:focusable="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Kontak"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvHeaderSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buat kontak baru"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Kontak"
                android:textStyle="bold"
                android:textColor="#222222"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPhoto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E0E0E0"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/imgPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/ic_placeholder_photo"/>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/btnDeletePhoto"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_delete_small_red"
                    android:background="@drawable/bg_search_rounded"
                    android:backgroundTint="#FFFFFF"
                    android:padding="2dp"
                    android:layout_alignEnd="@id/cardPhoto"
                    android:layout_alignBottom="@id/cardPhoto"
                    android:visibility="gone"/> <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPilihFoto"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Pilih Foto"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_green"
                android:layout_below="@id/cardPhoto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="16dp"/>
            </RelativeLayout>

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                <TextView android:text="Nama Kontak" android:textStyle="bold" android:textColor="#222222" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text=" *" android:textColor="#E53935" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_field"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                <TextView android:text="Nomor Telepon" android:textStyle="bold" android:textColor="#222222" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text=" *" android:textColor="#E53935" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <EditText
                android:id="@+id/etNomor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_field"
                android:inputType="phone"
                android:textColor="@android:color/black"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                <TextView android:text="Email" android:textStyle="bold" android:textColor="#222222" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text=" *" android:textColor="#E53935" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_field"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/black"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catatan (Opsional)"
                android:textStyle="bold"
                android:textColor="#222222"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etCatatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_field"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top"
                android:textColor="@android:color/black"
                android:padding="16dp"
                android:textSize="14sp"
                android:layout_marginBottom="32dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBatal"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Batal"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:background="@drawable/bg_button_gray"
                    android:layout_marginEnd="8dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSimpan"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Simpan Kontak"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_button_green"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>